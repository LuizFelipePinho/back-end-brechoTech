generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1- tipo de hardware
// 2- modelo do hardware
// 9 - Preço
// 6- anos de uso
// 3- fotos do produto
// 4- video do produto funcionando com o cpu-z
// 7- Foi usada por mais de uma pessoa


// preciso criar uma relação entre o produto e a categoria 
model Product {
  id                Int    @id @default(autoincrement())
  typeHard          String
  modelHard         String
  priceHard         String
  yearuseHard       Int
  productPhotosHard String
  videoHard         String
  usedHard          String
}

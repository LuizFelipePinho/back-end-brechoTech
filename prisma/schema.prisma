generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1- tipo de hardware
// 2- modelo do hardware
// 9 - Pre√ßo
// 6- anos de uso
// 3- fotos do produto
// 4- video do produto funcionando com o cpu-z
// 7- Foi usada por mais de uma pessoa

model Product {
  id                Int    @id @default(autoincrement())
  typeHard          String
  modelHard         String
  priceHard         String
  yearuseHard       Int
  productPhotosHard String
  videoHard         String
  usedHard          String
}


model User{
  id  Int   @id @default(autoincrement())
  nome String
  email String @unique
  regiao String
  cpf     String
  password String

model Categorias {
  id         String   @id @default(uuid())
  hardwerEntrada String?
  hardwerSaida  String?
  hardwerProcessamento String?
  hardwerArmazenamento String?
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
  
}

model Vendedor {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  cpf        String   @unique
  region     String
  reputation String
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

}